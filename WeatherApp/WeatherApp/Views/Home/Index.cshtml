@using WeatherApp.Controllers.Home
@model WeatherApp.ViewModels.IWeatherDataViewModel
@{
    ViewData["Title"] = "Home Page";
    ViewData["View"] = "temperature";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"> @Model.Title</h1>
    <partial name="_HomeToolbar"/>
</div>

<canvas id="chart" height="200"></canvas>
<h2>Section title</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Temperature In</th>
                <th scope="col">Temperature Out</th>
            </tr>
        </thead>
        <tbody>
           @* @foreach (var item in Model.Data)
